{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "globals": {
    "soundManager": true,
    "SC": true,
    "currentSound": true
  },
  "env": {
    // I write for browser
    "browser": true,
    // in CommonJS
    "node": true
  },
  // To give you an idea how to override rule options:
  "plugins": [
    "meteor"
  ],
  "extends": [
    "airbnb",
    "plugin:meteor/recommended"
  ],
  "rules": {
    "quotes": [1, "single"],
    "import/no-unresolved": 0,
    "curly": 0,
    "no-extra-parens": 1,
    "consistent-return": 0,
    "comma-dangle": ["error", "never"],
    "max-len": ["error", 120],
    "no-param-reassign": 0,
    "no-underscore-dangle": 0
  }
}
