head
	meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
	meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1")
	title sctunes

template(name="ApplicationLayout")
	+yield

template(name="trackLayout")
	body
		+optionsRow
		#wrapper.active
			.container-fluid					
				+yield
				//- if currentTrack
				+player

template(name='loader')
	.loading
		.col-xs-12.loaderContainer(id='#{artistPage}')
			.bigSpin
				.rect1
				.rect2
				.rect3
				.rect4
				.rect5
			p #{loadingText}

template(name='login')
	.container
		h1.text-center.sctunes scTunes
		.text-center.desc 
			p Listen to your soundcloud favorites easier! #{loggedIn}
		.text-center
			+loginButtons